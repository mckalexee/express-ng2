{
  "name": "express-ng2",
  "version": "1.0.1",
  "description": "An express/angular starter",
  "main": "dist/server.js",
  "scripts": {
    "start": "concurrently \"npm run ng-watch\" \"npm run node-watch\" \"npm run nodemon\" \"npm run browser-sync\"  --kill-others",
    "build": "rimraf public && webpack --config config/webpack.prod.js --progress --profile --bail",
    "ng-watch": "rimraf public && webpack --config config/webpack.dev.js --progress --colors --watch",
    "node-watch": "gulp watch",
    "nodemon": "nodemon --inspect ./dist/server.js localhost 8080 --watch dist",
    "browser-sync": "browser-sync start --proxy \"localhost:8080\" --serveStatic \"public\" --files \"public\" \"dist\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Alex McKenzie",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^4.1.0",
    "@angular/compiler": "^4.1.0",
    "@angular/core": "^4.1.0",
    "@angular/forms": "^4.1.0",
    "@angular/http": "^4.1.0",
    "@angular/platform-browser": "^4.1.0",
    "@angular/platform-browser-dynamic": "^4.1.0",
    "@angular/router": "^4.1.0",
    "body-parser": "^1.17.1",
    "bootstrap": "^3.3.7",
    "core-js": "^2.4.1",
    "express": "^4.15.2",
    "ngx-bootstrap": "^1.6.6",
    "rxjs": "^5.3.0",
    "typescript": "^2.3.2",
    "zone.js": "^0.8.9"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.3",
    "@types/express": "^4.0.35",
    "@types/node": "^7.0.15",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.3",
    "browser-sync": "^2.18.8",
    "codelyzer": "^3.0.1",
    "concurrently": "^3.4.0",
    "css-loader": "^0.28.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "gulp": "^3.9.1",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-typescript": "^3.1.6",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "nodemon": "^1.11.0",
    "null-loader": "^0.1.1",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "style-loader": "^0.17.0",
    "tslint": "^5.1.0",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-merge": "^4.1.0"
  }
}
